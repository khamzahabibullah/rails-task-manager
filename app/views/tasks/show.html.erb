<h1 class="mb-4"><%= @task.title%></h1>

<p><%= link_to 'Edit', edit_task_path(@task.id), class: 'btn-edit'%></p>

<p class="details"><%= @task.details %></p>

<p><% if @task.completed %>
        <i class="far fa-check-square"></i>
      <% else %>
        <i class="far fa-square"></i>
      <% end %></p>

<%= link_to 'Back to list', tasks_path %>
