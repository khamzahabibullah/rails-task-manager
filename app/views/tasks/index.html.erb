<h1>Tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <li class="no-list">
      <% if task.completed %>
        <i class="far fa-check-square"></i>
      <% else %>
        <i class="far fa-square"></i>
      <% end %>
      <%= link_to task.title, task_path(task.id)%>
      <%= link_to task_path(task.id), method: :delete, data: {confirm: 'Are you sure?'} do%>
        <i class="fas fa-trash"></i>
      <% end %>
    </li>
  <% end %>
</ul>

<%= link_to 'Add a new task', new_task_path %>
